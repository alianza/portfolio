{
  "name": "portfolio",
  "version": "0.0.1",
  "description": "",
  "keywords": [
    "Portfolio"
  ],
  "license": "",
  "author": "",
  "scripts": {
    "build": "npm run build-css && parcel build --no-content-hash index.html",
    "dev": "parcel index.html --open",
    "dev:watch": "npm-run-all --parallel start watch:css watch:md-json",
    "start": "npm run build && npm run dev",
    "build-css": "node-sass --include-path scss css/main.scss css/main.css",
    "watch:css": "nodemon --watch css -e scss -x \"npm run build-css\"",
    "watch:md-json": "nodemon --watch static -e md,json,webp,webm -x \"parcel build --no-content-hash index.html\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "serve dist -p 3000 -s"
  },
  "devDependencies": {
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.1",
    "sass": "^1.32.5",
    "serve": "^13.0.2"
  },
  "dependencies": {
    "@parcel/plugin": "^2.0.0-alpha.3",
    "highlight.js": "^10.7.1",
    "marked": "^2.0.1"
  },
  "staticFiles": {
    "staticPath": "static",
    "watcherGlob": "**/*.md"
  },
  "browserslist": [
    "since 2017-06"
  ]
}
